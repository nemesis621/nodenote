extends layout

block content
    div(class='container')
        div(class='row')
            div(class='col-sm-8 col-md-10 col-lg-12')
                div(class='page-header')
                    h3 Einloggen
                    div(class='col-lg-8')
                        if error
                            br
                            div(class='alert alert-danger')
                                a(class='close', data-dismiss='alert') &times;
                                span Keine g√ºltige OpenID-Adresse angegeben
                        form(class='form-horizontal', action='/authenticate', method='get')
                            fieldset
                                p
                                div(class='control-group')
                                    label(class='control-label') Provider
                                    div(class='controls')
                                        button(id='prov_simple', class='btn btn-default oidprov', name='openid_identifier', type='submit', value='https://ares.nunki.uberspace.de') Simple-ID
                                        button(id='prov_google', class='btn btn-default oidprov', name='openid_identifier', type='submit', value='https://www.google.com/accounts/o8/id') Google
                                        button(id='prov_yahoo', class='btn btn-default oidprov', name='openid_identifier', type='submit', value='https://me.yahoo.com') Yahoo
                        form(class='form-horizontal', action='/authenticate', method='get')
                            fieldset
                                p
                                div(class='control-group')
                                    label(class='control-label') Ihr OpenID-Provider
                                    div(class='controls')
                                        input(name='openid_identifier', type='text', placeholder='OpenID', class='input-xlarge form-control', value='https://www.google.com/accounts/o8/id')
                                p
                                div(class='control-group')
                                    div(class='controls')
                                        button(type='submit', class='btn btn-success') Absenden